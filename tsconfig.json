{
	"compilerOptions": {
		"target": "ES2023",
		"module": "ESNext",
		"lib": ["ES2023"],
		"moduleResolution": "bundler",
		"declaration": true,
		"declarationMap": true,
		"outDir": "./dist",
		"rootDir": "./src",
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true
	},
	"include": ["src/**/*", "src/prisma"],
	"exclude": ["node_modules", "dist", "src/prisma/generated"]
}
